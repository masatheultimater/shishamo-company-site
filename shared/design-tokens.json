{
  "$schema": "https://design-tokens.org/schema.json",
  "meta": {
    "project": "shishamo-company-site",
    "style": "dark-modern",
    "description": "ししゃもカンパニー デザイントークン — Dark-first semantic system"
  },
  "palette": {
    "gray-950": { "value": "#0a0a0f", "description": "Deepest background" },
    "gray-900": { "value": "#111118" },
    "gray-850": { "value": "#16161f" },
    "gray-800": { "value": "#1c1c2a" },
    "gray-750": { "value": "#222233" },
    "gray-700": { "value": "#2a2a3a" },
    "gray-600": { "value": "#3a3a4d" },
    "gray-500": { "value": "#6b6b80" },
    "gray-400": { "value": "#8e8ea0" },
    "gray-300": { "value": "#b0b0c0" },
    "gray-200": { "value": "#d1d1dc" },
    "gray-100": { "value": "#e8e8f0" },
    "gray-50": { "value": "#f4f4f8" },
    "white": { "value": "#ffffff" },
    "blue-700": { "value": "#1d4ed8" },
    "blue-600": { "value": "#2563eb" },
    "blue-500": { "value": "#3b82f6" },
    "blue-400": { "value": "#60a5fa" },
    "cyan-600": { "value": "#0d9488" },
    "cyan-400": { "value": "#2dd4bf" },
    "cyan-300": { "value": "#5eead4" },
    "orange-600": { "value": "#ea580c" },
    "orange-400": { "value": "#fb923c" },
    "amber-500": { "value": "#f59e0b" },
    "amber-400": { "value": "#fbbf24" },
    "green-500": { "value": "#10b981" },
    "green-400": { "value": "#34d399" },
    "red-500": { "value": "#ef4444" },
    "red-400": { "value": "#f87171" }
  },
  "semantic": {
    "dark": {
      "bg": "palette.gray-950",
      "bg-secondary": "palette.gray-850",
      "bg-tertiary": "palette.gray-800",
      "surface": "palette.gray-850",
      "text": "palette.gray-100",
      "text-secondary": "palette.gray-400",
      "text-heading": "palette.white",
      "border": "palette.gray-700",
      "accent": "palette.blue-500",
      "orange": "palette.orange-400",
      "success": "palette.green-400"
    },
    "light": {
      "bg": "palette.white",
      "bg-secondary": "palette.gray-50",
      "bg-tertiary": "palette.gray-100",
      "surface": "palette.white",
      "text": "palette.gray-900",
      "text-secondary": "palette.gray-500",
      "text-heading": "palette.gray-900",
      "border": "palette.gray-200",
      "accent": "palette.blue-600",
      "orange": "palette.orange-600",
      "success": "palette.green-500"
    }
  },
  "typography": {
    "font-family": {
      "sans": "'Inter', 'Noto Sans JP', sans-serif",
      "display": "'Noto Sans JP', sans-serif"
    },
    "font-size": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "font-weight": {
      "normal": "400",
      "medium": "500",
      "bold": "700",
      "black": "900"
    },
    "line-height": {
      "tight": "1.2",
      "normal": "1.75",
      "relaxed": "1.8"
    }
  },
  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem",
    "4xl": "5rem",
    "5xl": "8rem"
  },
  "radius": {
    "sm": "6px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "full": "9999px"
  },
  "transitions": {
    "base": "200ms ease",
    "slow": "300ms ease"
  },
  "gradients": {
    "primary": "linear-gradient(135deg, palette.blue-500, palette.blue-600)",
    "accent": "linear-gradient(135deg, palette.blue-500, palette.cyan-400)",
    "rainbow": "linear-gradient(90deg, palette.blue-500, palette.cyan-400, palette.amber-400)"
  }
}
