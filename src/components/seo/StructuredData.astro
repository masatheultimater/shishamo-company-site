---
/**
 * StructuredData.astro
 * 構造化データ（JSON-LD）を出力するコンポーネント
 *
 * 使用例:
 * <StructuredData type="Organization" />
 * <StructuredData type="Person" />
 * <StructuredData type="Article" data={articleData} />
 * <StructuredData type="Service" data={serviceData} />
 */

// Structured data types are available in @shared/contracts/api
// (OrganizationSchema, PersonSchema, ArticleSchema, BreadcrumbSchema, ServiceSchema)
// but not used here because this component uses a string-based type discriminator
// with Record<string, unknown> for maximum flexibility with JSON-LD data.

import organizationData from '../../data/schema/organization.json';
import personData from '../../data/schema/person.json';

interface Props {
  type: 'Organization' | 'Person' | 'LocalBusiness' | 'Article' | 'BlogPosting' | 'BreadcrumbList' | 'Service';
  data?: Record<string, unknown>;
}

const { type, data } = Astro.props;

import { siteMetadata, siteBranding } from '../../lib/siteConfig';
const siteUrl = siteMetadata.siteUrl;

// 構造化データを取得
function getStructuredData(type: string, customData?: Record<string, unknown>) {
  switch (type) {
    case 'Organization':
    case 'LocalBusiness':
      return customData ? { ...organizationData, ...customData } : organizationData;

    case 'Person':
      return customData ? { ...personData, ...customData } : personData;

    case 'Article':
    case 'BlogPosting':
      if (!customData) {
        return null;
      }
      return {
        '@context': 'https://schema.org',
        '@type': type,
        author: {
          '@type': 'Person',
          '@id': `${siteUrl}/#person`,
          name: '吉川昌宏'
        },
        publisher: {
          '@type': 'Organization',
          '@id': `${siteUrl}/#organization`,
          name: siteBranding.clientName,
          logo: {
            '@type': 'ImageObject',
            url: `${siteUrl}/shishamo-logo.svg`
          }
        },
        ...customData
      };

    case 'BreadcrumbList':
      if (!customData) {
        return null;
      }
      return {
        '@context': 'https://schema.org',
        '@type': 'BreadcrumbList',
        ...customData
      };

    case 'Service':
      if (!customData) {
        return null;
      }
      return {
        '@context': 'https://schema.org',
        '@type': 'Service',
        provider: {
          '@type': 'ProfessionalService',
          '@id': `${siteUrl}/#organization`,
          name: siteBranding.clientName
        },
        areaServed: {
          '@type': 'Country',
          name: 'JP'
        },
        availableLanguage: 'Japanese',
        ...customData
      };

    default:
      return customData;
  }
}

const structuredData = getStructuredData(type, data);
---

{structuredData && (
  <script
    type="application/ld+json"
    set:html={JSON.stringify(structuredData, null, 0)}
  />
)}
