---
/**
 * SectionHeader.astro
 * セクションヘッダーの共通コンポーネント
 *
 * 使用例:
 * <SectionHeader
 *   label="Services"
 *   title="サービス一覧"
 *   description="様々なサービスを提供しています"
 * />
 */

interface Props {
  label?: string;
  title: string;
  description?: string;
  variant?: 'default' | 'light';
  align?: 'center' | 'left';
}

const {
  label,
  title,
  description,
  variant = 'default',
  align = 'center'
} = Astro.props;

const variantClass = variant === 'light' ? 'section-header--light' : '';
const alignClass = align === 'left' ? 'section-header--left' : '';
---

<div class={`section-header ${variantClass} ${alignClass}`.trim()}>
  {label && <div class="section-label">{label}</div>}
  <h2 class="section-title">{title}</h2>
  {description && <p class="section-desc">{description}</p>}
</div>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 48px;
  }

  .section-header--left {
    text-align: left;
  }

  .section-header--left .section-desc {
    margin: 0;
  }

  .section-label {
    font-size: 11px;
    font-weight: 600;
    color: var(--gray-400);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 10px;
  }

  .section-header--light .section-label {
    color: rgba(255, 255, 255, 0.7);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: 26px;
    font-weight: 700;
    color: var(--dark);
    margin-bottom: 12px;
  }

  .section-header--light .section-title {
    color: #e2e8f0;
  }

  .section-desc {
    font-size: 15px;
    color: var(--gray-600);
    max-width: 520px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .section-header--light .section-desc {
    color: rgba(255, 255, 255, 0.75);
  }

  /* Dark Mode */
  :global([data-theme="dark"]) .section-header--light .section-label {
    color: var(--gray-500);
  }
  :global([data-theme="dark"]) .section-header--light .section-title {
    color: var(--dark);
  }
  :global([data-theme="dark"]) .section-header--light .section-desc {
    color: var(--gray-600);
  }

  @media (prefers-color-scheme: dark) {
    :global(html:not([data-theme="light"])) .section-header--light .section-label {
      color: var(--gray-500);
    }
    :global(html:not([data-theme="light"])) .section-header--light .section-title {
      color: var(--dark);
    }
    :global(html:not([data-theme="light"])) .section-header--light .section-desc {
      color: var(--gray-600);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .section-title {
      font-size: 26px;
    }
  }

  @media (max-width: 480px) {
    .section-header {
      margin-bottom: 32px;
    }
    .section-title {
      font-size: 22px;
    }
  }
</style>
