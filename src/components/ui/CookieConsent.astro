---
/**
 * CookieConsent.astro
 * Cookie consent banner for GA4 analytics (改正電気通信事業法 compliance).
 *
 * - Shows banner if no prior consent decision stored
 * - On accept: updates GA consent mode to 'granted', stores in localStorage
 * - On reject: stores denial in localStorage, hides banner
 * - Consent expires after 365 days, prompting re-consent
 */
---

<div id="cookie-consent" class="cookie-consent" role="dialog" aria-label="Cookie consent" hidden>
  <div class="cookie-consent__inner">
    <p class="cookie-consent__text">
      当サイトではGoogleアナリティクスを使用し、アクセス情報を外部送信しています。
      <a href="/privacy-policy/" class="cookie-consent__link">プライバシーポリシー</a>
    </p>
    <div class="cookie-consent__actions">
      <button id="cookie-reject" class="cookie-consent__btn cookie-consent__btn--reject" type="button">
        拒否する
      </button>
      <button id="cookie-accept" class="cookie-consent__btn cookie-consent__btn--accept" type="button">
        同意する
      </button>
    </div>
  </div>
</div>

<script is:inline>
(function () {
  var STORAGE_KEY = 'cookie-consent';
  var EXPIRY_DAYS = 365;

  function getConsent() {
    try {
      var raw = localStorage.getItem(STORAGE_KEY);
      if (!raw) return null;
      var data = JSON.parse(raw);
      if (Date.now() > data.expiry) {
        localStorage.removeItem(STORAGE_KEY);
        return null;
      }
      return data;
    } catch (e) {
      return null;
    }
  }

  function saveConsent(granted) {
    localStorage.setItem(STORAGE_KEY, JSON.stringify({
      analytics: granted,
      timestamp: Date.now(),
      expiry: Date.now() + EXPIRY_DAYS * 24 * 60 * 60 * 1000
    }));
  }

  function updateGtagConsent(granted) {
    if (typeof window.gtag === 'function') {
      window.gtag('consent', 'update', {
        analytics_storage: granted ? 'granted' : 'denied'
      });
    }
  }

  var consent = getConsent();

  if (consent) {
    // Consent already decided — apply it silently
    updateGtagConsent(consent.analytics);
    return;
  }

  // No prior consent — show banner
  var banner = document.getElementById('cookie-consent');
  if (!banner) return;
  banner.hidden = false;

  function trackConsent(action) {
    window.dataLayer = window.dataLayer || [];
    window.dataLayer.push({ event: 'cookie_consent', consent_action: action });
  }

  document.getElementById('cookie-accept').addEventListener('click', function () {
    saveConsent(true);
    updateGtagConsent(true);
    trackConsent('accept');
    banner.hidden = true;
  });

  document.getElementById('cookie-reject').addEventListener('click', function () {
    saveConsent(false);
    updateGtagConsent(false);
    trackConsent('dismiss');
    banner.hidden = true;
  });
})();
</script>

<style>
  .cookie-consent {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9999;
    background: var(--gray-50);
    border-top: 1px solid var(--gray-200);
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.08);
    padding: var(--space-md) var(--space-lg);
  }

  .cookie-consent__inner {
    max-width: var(--container-md);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .cookie-consent__text {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--gray-700);
    line-height: var(--line-height-normal);
    flex: 1;
    min-width: 200px;
  }

  .cookie-consent__link {
    color: var(--primary);
    text-decoration: underline;
  }

  .cookie-consent__actions {
    display: flex;
    gap: var(--space-sm);
    flex-shrink: 0;
  }

  .cookie-consent__btn {
    padding: var(--space-sm) var(--space-lg);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    border: none;
    transition: opacity 0.2s;
  }

  .cookie-consent__btn:hover {
    opacity: 0.85;
  }

  .cookie-consent__btn--accept {
    background: var(--primary);
    color: #ffffff;
  }

  .cookie-consent__btn--reject {
    background: var(--gray-200);
    color: var(--gray-700);
  }

  :global([data-theme="dark"]) .cookie-consent {
    background: var(--gray-100);
    border-top-color: var(--gray-300);
    box-shadow: 0 -2px 8px rgba(0, 0, 0, 0.3);
  }

  :global([data-theme="dark"]) .cookie-consent__text {
    color: var(--gray-600);
  }

  :global([data-theme="dark"]) .cookie-consent__btn--reject {
    background: var(--gray-300);
    color: var(--gray-600);
  }

  @media (max-width: 640px) {
    .cookie-consent__inner {
      flex-direction: column;
      text-align: center;
    }
    .cookie-consent__actions {
      width: 100%;
      justify-content: center;
    }
  }
</style>
