---
/**
 * Arrow Icon SVG Component
 * Right-pointing arrow used in buttons and links.
 * Accepts optional class and size props. Hidden from screen readers by default.
 */
interface Props {
  class?: string;
  size?: number;
}

const { class: className, size = 16 } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width="2"
  stroke-linecap="round"
  stroke-linejoin="round"
  aria-hidden="true"
  class={className}
><path d="M5 12h14M12 5l7 7-7 7"/></svg>
