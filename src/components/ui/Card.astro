---
/**
 * Card.astro
 * 汎用カードコンポーネント
 *
 * 使用例:
 * <Card variant="service" href="/services/dx-consulting/">
 *   <span slot="number">01</span>
 *   <h3 slot="title">DX推進</h3>
 *   <p slot="description">説明文</p>
 * </Card>
 */

interface Props {
  variant?: 'default' | 'service' | 'feature' | 'problem';
  href?: string;
  class?: string;
}

const { variant = 'default', href, class: className } = Astro.props;

const Tag = href ? 'a' : 'div';
const cardClass = `card card--${variant} ${className || ''}`.trim();
---

<Tag href={href} class={cardClass}>
  <slot name="icon" />
  <slot name="number" />
  <slot name="title" />
  <slot name="description" />
  <slot />
</Tag>

<style>
  .card {
    background: var(--gray-50);
    border: 1px solid var(--gray-200);
    border-radius: var(--radius-sm);
    padding: 24px;
    transition: all 0.2s;
    display: block;
  }

  a.card {
    text-decoration: none;
    color: inherit;
  }

  .card:hover {
    border-color: var(--primary);
  }

  /* Service Card */
  .card--service {
    padding: 28px 24px;
  }

  .card--service :global([slot="number"]) {
    font-family: var(--font-sans);
    font-size: 12px;
    font-weight: 700;
    color: var(--primary);
    margin-bottom: 16px;
    letter-spacing: 0.05em;
    display: block;
  }

  .card--service :global(h3) {
    font-family: var(--font-display);
    font-size: 17px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--dark);
  }

  .card--service :global(p) {
    font-size: 13px;
    color: var(--gray-500);
    line-height: 1.6;
  }

  /* Feature Card */
  .card--feature {
    text-align: center;
  }

  .card--feature :global([slot="icon"]) {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .card--feature :global(h3) {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--dark);
  }

  .card--feature :global(p) {
    font-size: 0.95rem;
    color: var(--gray);
    line-height: 1.7;
  }

  /* Problem Card */
  .card--problem {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12px;
    background: var(--gray-100);
    padding: 18px 20px;
  }

  .card--problem:hover {
    background: var(--gray-50);
  }

  /* Responsive */
  @media (max-width: 480px) {
    .card--service {
      padding: 24px 20px;
    }

    .card--problem {
      padding: 20px;
    }
  }

  @media (hover: none) {
    .card:hover {
      transform: none;
    }
  }
</style>
