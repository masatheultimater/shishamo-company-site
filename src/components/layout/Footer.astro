---
/**
 * Footer Component
 * Implements FooterProps from shared/contracts/components.ts
 */
import {
  siteBranding,
  footerServiceLinks,
  footerInfoLinks,
  footerContactLinks,
} from '../../lib/siteConfig';
import Logo from '../ui/Logo.astro';

---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__brand">
      <div class="footer__logo">
        <span class="footer__logo-icon" aria-hidden="true">
          <Logo />
        </span>
        {siteBranding.ownerNickname}｜{siteBranding.ownerName}
      </div>
      <p>{siteBranding.tagline}<br>{siteBranding.concept}</p>
    </div>

    <div class="footer__links">
      <h4>サービス</h4>
      <ul>
        {footerServiceLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="footer__links">
      <h4>情報</h4>
      <ul>
        {footerInfoLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="footer__links">
      <h4>お問い合わせ</h4>
      <ul>
        {footerContactLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <div class="footer__bottom">
    <p>&copy; {siteBranding.year} {siteBranding.ownerName}（{siteBranding.ownerNickname}）All rights reserved.</p>
  </div>
</footer>

<style>
  .footer {
    background: var(--footer-bg);
    color: var(--footer-text);
    padding: 64px 24px 32px;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--footer-accent), var(--footer-accent-secondary));
  }

  .footer__inner {
    max-width: var(--container-lg);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 48px;
  }

  /* Brand Section */
  .footer__brand .footer__logo {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--footer-heading);
    font-weight: 700;
    font-size: 16px;
    margin-bottom: 16px;
  }

  .footer__logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 30px;
    background: var(--footer-accent);
    border-radius: var(--radius-sm);
    padding: 5px 6px;
    color: var(--footer-bg);
  }

  .footer__logo-icon svg {
    width: 100%;
    height: 100%;
  }

  .footer__brand p {
    font-size: 14px;
    line-height: 1.8;
  }

  /* Links Sections */
  .footer__links h4 {
    color: var(--footer-heading);
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer__links li {
    margin-bottom: 12px;
  }

  .footer__links a {
    font-size: 14px;
    transition: all 0.2s;
  }

  .footer__links a:hover {
    color: var(--footer-heading);
    padding-left: 4px;
  }

  /* Bottom Section */
  .footer__bottom {
    max-width: var(--container-lg);
    margin: 48px auto 0;
    padding-top: 24px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
  }


  /* Dark mode support */
  :global([data-theme="dark"]) .footer {
    background: var(--gray-200);
    color: var(--gray-600);
  }
  :global([data-theme="dark"]) .footer::before {
    background: linear-gradient(90deg, var(--primary), var(--teal));
  }
  :global([data-theme="dark"]) .footer__brand .footer__logo {
    color: var(--dark);
  }
  :global([data-theme="dark"]) .footer__logo-icon {
    background: var(--primary);
    color: #ffffff;
  }
  :global([data-theme="dark"]) .footer__links h4 {
    color: var(--dark);
  }
  :global([data-theme="dark"]) .footer__links a:hover {
    color: var(--dark);
  }
  :global([data-theme="dark"]) .footer__bottom {
    border-top-color: var(--gray-300);
  }
  /* Responsive: iPad */
  @media (max-width: 1024px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }

    .footer__brand {
      grid-column: span 2;
    }
  }

  /* Responsive: Tablet */
  @media (max-width: 768px) {
    .footer {
      padding: 48px 24px 24px;
    }

    .footer__inner {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .footer__brand {
      grid-column: auto;
    }

    .footer__brand .footer__logo {
      justify-content: center;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 16px;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 480px) {
    .footer__inner {
      grid-template-columns: 1fr;
      gap: 24px;
    }

  }
</style>
