---
/**
 * Footer Component
 * Implements FooterProps from shared/contracts/components.ts
 */
import {
  siteBranding,
  footerServiceLinks,
  footerInfoLinks,
  footerContactLinks,
  socialLinks,
} from '../../lib/siteConfig';
import Logo from '../ui/Logo.astro';
import XIcon from '../ui/XIcon.astro';

type Props = Record<string, never>;
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__brand">
      <div class="footer__logo">
        <span class="footer__logo-icon" aria-hidden="true">
          <Logo />
        </span>
        <span class="footer__logo-text">SHISHAMO COMPANY</span>
      </div>
      <p>{siteBranding.tagline}<br />{siteBranding.concept}</p>
      <div class="footer__social">
        <a
          href={socialLinks.x.url}
          target="_blank"
          rel="noopener noreferrer"
          class="footer__social-link"
          aria-label={socialLinks.x.label}
        >
          <XIcon size={16} />
        </a>
      </div>
    </div>

    <div class="footer__links">
      <h4>サービス</h4>
      <ul>
        {
          footerServiceLinks.map((link) => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="footer__links">
      <h4>情報</h4>
      <ul>
        {
          footerInfoLinks.map((link) => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class="footer__links">
      <h4>お問い合わせ</h4>
      <ul>
        {
          footerContactLinks.map((link) => (
            <li>
              <a href={link.href}>{link.name}</a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>

  <div class="footer__bottom">
    <p>
      &copy; {siteBranding.year}
      {siteBranding.clientName} All rights reserved.
    </p>
  </div>
</footer>

<style>
  /* ===== FOOTER — Semantic Tokens ===== */
  .footer {
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    padding: 64px 24px 32px;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--gradient-semantic-rainbow);
  }

  .footer__inner {
    max-width: var(--container-lg);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 48px;
  }

  /* Brand Section */
  .footer__brand .footer__logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2px;
    color: var(--color-text-heading);
    margin-bottom: 16px;
    width: fit-content;
  }

  .footer__logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 42px;
    color: var(--color-text-heading);
  }

  .footer__logo-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .footer__logo-text {
    font-family: var(--font-logo);
    font-weight: 600;
    font-size: 0.5625rem;
    letter-spacing: 0.18em;
    color: var(--color-text-heading);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 100%;
  }

  .footer__brand p {
    font-size: 0.875rem;
    line-height: 1.8;
  }

  /* Social Links */
  .footer__social {
    display: flex;
    gap: 12px;
    margin-top: 16px;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    transition: all var(--transition-base);
  }

  .footer__social-link:first-child {
    background: var(--color-text-heading);
    color: var(--color-bg);
    border-color: transparent;
  }

  .footer__social-link:hover {
    background: var(--color-accent);
    color: var(--palette-white);
    border-color: var(--color-accent);
  }

  .footer__social-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Links Sections */
  .footer__links h4 {
    color: var(--color-text-heading);
    font-size: 0.8125rem;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer__links li {
    margin-bottom: 12px;
  }

  .footer__links a {
    font-size: 0.875rem;
    transition: all var(--transition-base);
  }

  .footer__links a:hover {
    color: var(--color-text-heading);
    padding-left: 4px;
  }

  /* Bottom Section */
  .footer__bottom {
    max-width: var(--container-lg);
    margin: 48px auto 0;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.8125rem;
  }

  /* Responsive: iPad */
  @media (max-width: 1024px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }

    .footer__brand {
      grid-column: span 2;
    }
  }

  /* Responsive: Tablet */
  @media (max-width: 768px) {
    .footer {
      padding: 48px 24px 24px;
    }

    .footer__inner {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .footer__brand {
      grid-column: auto;
    }

    .footer__brand .footer__logo {
      margin-left: auto;
      margin-right: auto;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 16px;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 480px) {
    .footer__inner {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
</style>
