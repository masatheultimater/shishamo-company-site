---
/**
 * Footer Component
 * Implements FooterProps from shared/contracts/components.ts
 */
import {
  siteBranding,
  footerServiceLinks,
  footerInfoLinks,
  footerContactLinks,
  socialLinks,
} from '../../lib/siteConfig';
import Logo from '../ui/Logo.astro';

interface Props {}
---

<footer class="footer">
  <div class="footer__inner">
    <div class="footer__brand">
      <div class="footer__logo">
        <span class="footer__logo-icon" aria-hidden="true">
          <Logo />
        </span>
        {siteBranding.clientName}
      </div>
      <p>{siteBranding.tagline}<br>{siteBranding.concept}</p>
      <div class="footer__social">
        <a href={socialLinks.x.url} target="_blank" rel="noopener noreferrer" class="footer__social-link" aria-label={socialLinks.x.label}>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
        <a href={socialLinks.facebook.url} target="_blank" rel="noopener noreferrer" class="footer__social-link" aria-label={socialLinks.facebook.label}>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M13.5 9.2V7.6c0-.7.5-1.2 1.2-1.2h1.9V3.2h-2.2c-2.6 0-4.2 1.7-4.2 4.2v1.8H8v3.1h2.2v8.5h3.3v-8.5h2.8l.4-3.1z"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="footer__links">
      <h4>サービス</h4>
      <ul>
        {footerServiceLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="footer__links">
      <h4>情報</h4>
      <ul>
        {footerInfoLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>

    <div class="footer__links">
      <h4>お問い合わせ</h4>
      <ul>
        {footerContactLinks.map((link) => (
          <li>
            <a href={link.href}>{link.name}</a>
          </li>
        ))}
      </ul>
    </div>
  </div>

  <div class="footer__bottom">
    <p>&copy; {siteBranding.year} {siteBranding.clientName} All rights reserved.</p>
  </div>
</footer>

<style>
  /* ===== FOOTER — Semantic Tokens ===== */
  .footer {
    background: var(--color-bg-secondary);
    color: var(--color-text-secondary);
    padding: 64px 24px 32px;
    position: relative;
  }

  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: var(--gradient-semantic-rainbow);
  }

  .footer__inner {
    max-width: var(--container-lg);
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1.5fr 1fr 1fr 1fr;
    gap: 48px;
  }

  /* Brand Section */
  .footer__brand .footer__logo {
    display: flex;
    align-items: center;
    gap: 12px;
    color: var(--color-text-heading);
    font-weight: 700;
    font-size: 16px;
    margin-bottom: 16px;
  }

  .footer__logo-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 30px;
    background: var(--color-accent);
    border-radius: var(--radius-sm);
    padding: 5px 6px;
    color: var(--palette-white);
  }

  .footer__logo-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .footer__brand p {
    font-size: 14px;
    line-height: 1.8;
  }

  /* Social Links */
  .footer__social {
    display: flex;
    gap: 12px;
    margin-top: 16px;
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--color-surface-elevated);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    transition: all var(--transition-base);
  }

  .footer__social-link:first-child {
    background: var(--color-text-heading);
    color: var(--color-bg);
    border-color: transparent;
  }

  .footer__social-link:hover {
    background: var(--color-accent);
    color: var(--palette-white);
    border-color: var(--color-accent);
  }

  .footer__social-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }

  /* Links Sections */
  .footer__links h4 {
    color: var(--color-text-heading);
    font-size: 13px;
    font-weight: 600;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer__links li {
    margin-bottom: 12px;
  }

  .footer__links a {
    font-size: 14px;
    transition: all var(--transition-base);
  }

  .footer__links a:hover {
    color: var(--color-text-heading);
    padding-left: 4px;
  }

  /* Bottom Section */
  .footer__bottom {
    max-width: var(--container-lg);
    margin: 48px auto 0;
    padding-top: 24px;
    border-top: 1px solid var(--color-border);
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 13px;
  }

  /* Responsive: iPad */
  @media (max-width: 1024px) {
    .footer__inner {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }

    .footer__brand {
      grid-column: span 2;
    }
  }

  /* Responsive: Tablet */
  @media (max-width: 768px) {
    .footer {
      padding: 48px 24px 24px;
    }

    .footer__inner {
      grid-template-columns: 1fr;
      gap: 32px;
      text-align: center;
    }

    .footer__brand {
      grid-column: auto;
    }

    .footer__brand .footer__logo {
      justify-content: center;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 16px;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 480px) {
    .footer__inner {
      grid-template-columns: 1fr;
      gap: 24px;
    }
  }
</style>
