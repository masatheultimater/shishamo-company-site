---
/**
 * Header Component
 * Implements HeaderProps from shared/contracts/components.ts
 */
import { siteBranding, navigationItems } from '../../lib/siteConfig';

interface Props {
  currentPage?: 'home' | 'services' | 'profile' | 'blog' | 'contact';
  transparent?: boolean;
}

const { currentPage, transparent = false } = Astro.props;
---

<header class:list={["header", { "header--transparent": transparent }]}>
  <a href="/" class="logo">
    <div class="logo__icon">
      <span class="logo__fish" aria-hidden="true">&#x1F41F;</span>
    </div>
    <div class="logo__text">
      {siteBranding.ownerNickname}
      <span class="logo__subtext">| {siteBranding.ownerName}</span>
    </div>
  </a>

  <nav class="nav" aria-label="Main navigation">
    {navigationItems.map((item) => (
      <a
        href={item.href}
        class:list={["nav__link", { "nav__link--active": currentPage === item.slug }]}
      >
        {item.title}
      </a>
    ))}
    <a href="/contact/" class:list={["nav__cta", { "nav__cta--active": currentPage === 'contact' }]}>
      お問い合わせ
    </a>
  </nav>

  <button
    class="mobile-menu-btn"
    aria-label="メニューを開く"
    aria-expanded="false"
    aria-controls="mobileNav"
    id="mobileMenuBtn"
  >
    <span aria-hidden="true">&#9776;</span>
  </button>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    padding: var(--space-md) var(--space-xl);
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.05);
  }

  .header--transparent {
    background: transparent;
    backdrop-filter: none;
    -webkit-backdrop-filter: none;
    box-shadow: none;
  }

  /* Logo */
  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .logo__icon {
    width: 44px;
    height: 44px;
    background: var(--gradient-primary-accent);
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  .logo__fish {
    display: inline-block;
    animation: swim var(--animation-swim-duration) ease-in-out infinite;
  }

  .logo__text {
    font-family: var(--font-display);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-xl);
  }

  .logo__subtext {
    color: var(--color-gray);
    font-weight: var(--font-weight-medium);
    font-size: var(--font-size-sm);
    margin-left: var(--space-sm);
  }

  /* Navigation */
  .nav {
    display: flex;
    gap: var(--space-xl);
    align-items: center;
  }

  .nav__link {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    color: var(--color-dark);
    transition: all 0.3s;
    padding: var(--space-sm) 0;
    position: relative;
  }

  .nav__link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--gradient-primary-accent);
    transition: width 0.3s;
  }

  .nav__link:hover::after,
  .nav__link--active::after {
    width: 100%;
  }

  .nav__link:hover,
  .nav__link--active {
    color: var(--color-primary);
  }

  .nav__cta {
    background: var(--gradient-primary);
    color: white !important;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-sm);
    font-size: var(--font-size-sm);
    font-weight: 600;
    transition: all 0.3s;
    box-shadow: var(--shadow-md);
  }

  .nav__cta:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg), 0 0 20px rgba(37, 99, 235, 0.3);
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    font-size: 1.75rem;
    cursor: pointer;
    padding: var(--space-sm);
    z-index: 110;
  }

  /* Responsive: Tablet */
  @media (max-width: 768px) {
    .header {
      padding: 0.875rem 1.5rem;
    }

    .nav {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }

  /* Responsive: Mobile */
  @media (max-width: 480px) {
    .header {
      padding: 0.75rem 1rem;
    }

    .logo__icon {
      width: 38px;
      height: 38px;
      font-size: 1.25rem;
    }

    .logo__text {
      font-size: var(--font-size-lg);
    }

    .logo__subtext {
      display: none;
    }
  }
</style>
